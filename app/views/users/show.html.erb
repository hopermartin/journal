
<h1>Listing users</h1>
<table>
  <tr>
    <th>Username</th>
    <th colspan="3"></th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= button_to 'Destroy', user_path(user), method: :delete, :onclick => "return confirm('Are you sure you want to delete this post?')"%></td>
    </tr>
  <% end %>
</table>
